@model HotelReservationsManager.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.reservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.releaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.releaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.breakfast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.breakfast)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.allInclusive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.allInclusive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.finalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.finalPrice)
        </dd>
    </dl>
</div>

<br />
<hr />
<br />
@if (Model.clients.Count == 0)
{
    <h3>!WARNING!</h3>
    <p>This reservation has no useres saved in the Database</p>
    <br />
    <p>Have you deleted all clients from the Database?</p>
}
else
{
    @foreach (var cl in Model.clients)
    {
        <table>
            <thead>
                <tr>
                    <td>
                        First Name
                    </td>
                    <td>
                        Last Name
                    </td>
                    <td>
                        Phonenumber
                    </td>
                    <td>
                        Email
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @cl.firstName
                    </td>
                    <td>
                        @cl.lastName
                    </td>
                    <td>
                        @cl.phoneNumber
                    </td>
                    <td>
                        @cl.email
                    </td>
                </tr>
            </tbody>
        </table>
    }
}

<br />
<hr />
<br />


@if (Model.room == null)
{
    <h3>!WARNING!</h3>
    <p>This room has been deleted from the Database</p>
}
else
{
    <table>
        <thead>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    Capacity
                </td>
                <td>
                    Price for bed for an adult
                </td>
                <td>
                    Price for bed for a child
                </td>
                <td>
                    Room is free?
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.room.ID
                </td>
                <td>
                    @Model.room.capacity
                </td>
                <td>
                    @Model.room.bedAdultPrice
                </td>
                <td>
                    @Model.room.bedChildPrice
                </td>
                <td>
                    @Html.DisplayFor(model => model.room.free)
                </td>
            </tr>
        </tbody>
    </table>
}
<p>@Model.applicationUser.Email</p>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
