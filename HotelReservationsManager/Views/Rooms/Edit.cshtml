@model HotelReservationsManager.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="capacity" class="control-label"></label>
                <input asp-for="capacity" class="form-control" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <input asp-for="type" class="form-control" />
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="free" /> @Html.DisplayNameFor(model => model.free)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="bedAdultPrice" class="control-label"></label>
                <input asp-for="bedAdultPrice" class="form-control" />
                <span asp-validation-for="bedAdultPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bedChildPrice" class="control-label"></label>
                <input asp-for="bedChildPrice" class="form-control" />
                <span asp-validation-for="bedChildPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
